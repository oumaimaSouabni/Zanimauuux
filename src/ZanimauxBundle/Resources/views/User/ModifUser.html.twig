{% extends "ZanimauxBundle:User:gestionUtilisateur.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block head %}
    {{ parent() }}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <script src="{{ asset('js/jquery-1.11.1.min.js') }}"></script>
    <title>{% block title %}{{ parent() }} -editUser{% endblock %}</title>

{% endblock %}

    {% block form %}
    <form action="{{ path('edituser',{'id':user.id }) }}" method="POST" class="form-horizontal">
        {{form_errors(form)}}
        <fieldset>
            <h2 style="color: red">Profile</h2></br>
            <div  style="color: black" class="form-group">
                <label for="form_username" class="col-md-2 control_label">Identifiant :</label>
                <div class="col-md-3">
                    {{ form_widget(form.username) }} </div>
            </div>
            <div style="color: black"  class="form-group">
                <label for="form_email" class="col-md-2 control_label">Email :</label>
                <div class="col-md-3">
                    {{ form_widget(form.email) }} </div>
            </div>
            <div style="color: black"  class="form-group">
                <label for="form_nom" class="col-md-2 control_label">Nom :</label>
                <div class="col-md-3">
                    {{ form_widget(form.nom) }} </div>
            </div>
            <div  style="color: black" class="form-group">
                <label for="form_prenom" class="col-md-2 control_label">Prenom :</label>
                <div class="col-md-3">
                    {{ form_widget(form.prenom) }} </div>
            </div>
            <div  style="color: black"  class="form-group">
                <label for="form_adresse" class="col-md-2 control_label">Adresse:</label>
                <div class="col-md-3">
                    {{ form_widget(form.adresse) }} </div></div>
            <div style="color: black"  class="form-group">
                <label for="form_ville" class="col-md-2 control_label">Ville :</label>
                <div class="col-md-3">
                    {{ form_widget(form.ville) }} </div>
            </div>

            <div class="form-group">
                <label style="color: black"  for="form_codePostale" class="col-md-2 control_label">Code postale :</label>
                <div class="col-md-3">
                    {{ form_widget(form.codePostale) }} </div>
            </div>
            <div class="form-group">
                <label style="color: black"  for="form.roles" class="col-md-2 control_label">Role :</label>
                <div class="col-md-3">

                   {{ form_widget(form.roles) }} </div>
            </div>

            <div style="color: black" class="form-group">
                <label for="form_telephone" class="col-md-2 control_label">Telephone :</label>
                <div class="col-md-3">
                    {{ form_widget(form.telephone) }} </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Mettre Ã  jour <span class="glyphicon glyphicon-ok"></span></button>
                </div>
            </div>
        </fieldset>

        {{ form_widget(form._token) }}
    </form>
    {% endblock %}




