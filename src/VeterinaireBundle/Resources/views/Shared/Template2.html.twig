    {% block contenu %}
        {% block formulaire %}

            <script>

                $(function() {
                    $( "#roleV" ).click(function() {
                        $( "#num" ).toggle();
                    });
                });
                $(function() {
                    $( "#roleC" ).click(function() {
                        $( "#num" ).hide();
                    });
                });
                $(function() {
                    $( "#roleD" ).click(function() {
                        $( "#num" ).hide();
                    });
                });
                $(function() {
                    $( "#roleM" ).click(function() {
                        $( "#num" ).hide();
                    });
                });
                $(function() {
                    $( "#roleR" ).click(function() {
                        $( "#num" ).hide();
                    });
                });

                $(function() {
                    $('#roleV').click(function () {
                        $('#roleC').prop('checked', false);
                        $('#roleD').prop('checked', false);
                        $('#roleM').prop('checked', false);
                        $('#roleR').prop('checked', false);
                    });
                });
                $(function() {
                    $('#roleC').click(function () {
                        $('#roleV').prop('checked', false);
                        $('#roleD').prop('checked', false);
                        $('#roleM').prop('checked', false);
                        $('#roleR').prop('checked', false);
                    });
                });
                $(function() {
                    $('#roleD').click(function () {
                        $('#roleC').prop('checked', false);
                        $('#roleV').prop('checked', false);
                        $('#roleM').prop('checked', false);
                        $('#roleR').prop('checked', false);
                    });
                });
                $(function() {
                    $('#roleM').click(function () {
                        $('#roleC').prop('checked', false);
                        $('#roleD').prop('checked', false);
                        $('#roleV').prop('checked', false);
                        $('#roleR').prop('checked', false);
                    });
                });
                $(function() {
                    $('#roleR').click(function () {
                        $('#roleC').prop('checked', false);
                        $('#roleD').prop('checked', false);
                        $('#roleM').prop('checked', false);
                        $('#roleV').prop('checked', false);
                    });
                });

            </script>
            <div class="row-fluid">
                <div class="content">
                    <form action="{{ path('fos_user_registration_register') }}" method="POST" class="form-horizontal" role="form" style="padding:20px">
                        {{form_errors(form)}}


                        <fieldset>
                            <h2 style="color: red">Inscription</h2></br>
                            <div class="form-group">
                                <label for="email" class="col-md-2 control_label">Email :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="email" id="email" name="fos_user_registration_form[email]" placeholder="exemple@gmail.com" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-md-2 control_label">Identifiant :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="username" name="fos_user_registration_form[username]" required="required" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="plainPassword_first" class="col-md-2 control_label">Mot de passe :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="password" id="plainPassword_first" name="fos_user_registration_form[plainPassword][first]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="plainPassword_second" class="col-md-2 control_label">Confirmation du mot de passe:</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="password" id="plainPassword_second" name="fos_user_registration_form[plainPassword][second]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="id" class="col-md-2 control_label">Cin :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="number" id="id" name="fos_user_registration_form[id]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nom" class="col-md-2 control_label">Nom :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="nom" name="fos_user_registration_form[nom]" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="prenom" class="col-md-2 control_label">Prenom :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="prenom" name="fos_user_registration_form[prenom]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="adresse" class="col-md-2 control_label">Adresse :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="adresse" name="fos_user_registration_form[adresse]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ville" class="col-md-2 control_label">Ville :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="ville" name="fos_user_registration_form[ville]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="codePostale" class="col-md-2 control_label">Code postale :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="text" id="codePostale" name="fos_user_registration_form[codePostale]"  required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="telephone" class="col-md-2 control_label">Telephone :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="number" id="telephone" name="fos_user_registration_form[telephone]"  required="required" />
                                </div>
                            </div>
                            <div class="widget-content nopadding">
                                <div class="form-group">
                                    <label for="roles" class="col-md-2 control_label">Vous êtes :</label>
                                    <div class="col-md-3">

                                        <input class="form-control" type="checkbox" id="roleV" name="fos_user_registration_form[roles][ROLE_VETERINAIRE]" value="ROLE_VETERINAIRE" /> Veterinaire
                                        <input class="form-control" type="checkbox" id="roleC" name="fos_user_registration_form[roles][ROLE_CLIENT]" value="ROLE_CLIENT" />Client
                                        <input class="form-control" type="checkbox" id="roleD" name="fos_user_registration_form[roles][ROLE_DRESSEUR]" value="ROLE_DRESSEUR" />Dresseur <br>
                                        <input class="form-control" type="checkbox" id="roleM" name="fos_user_registration_form[roles][ROLE_PROPRIETAIRE_MAGASIN]" value="ROLE_PROPRIETAIRE_MAGASIN" />Proprietaire magasin
                                        <input class="form-control" type="checkbox" id="roleR" name="fos_user_registration_form[roles][ROLE_PROPRIETAIRE_REFUGE]" value="ROLE_PROPRIETAIRE_REFUGE"/>Proprietaire refuge
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="display: none" id="num">
                                <label for="numeroOrdre" class="col-md-2 control_label">Numero Ordre :</label>
                                <div class="col-md-3">
                                    <input class="form-control" type="number" id="numeroOrdreOrdre" name="fos_user_registration_form[numeroOrdre]"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
                                </div>
                            </div>
                        </fieldset>

                        {{ form_widget(form._token) }}
                    </form>
                </div></div>
