    {% block form %}
        <form action="{{ path('editpromenade',{'id':promenade.id }) }}" method="POST" class="form-horizontal">

            {{form_errors(form)}}


            <fieldset>
                <h2 style="color: red">Promenade</h2></br>
                <div class="form-group">
                    <label for="form_nomPromenade" class="col-md-2 control_label">Nom :</label>
                    <div class="col-md-3">
                        {{ form_widget(form.nomPromenade) }} </div>
                </div>
                <div class="form-group">
                    <label for="form_lieuPromenade" class="col-md-2 control_label">Lieu :</label>
                    <div class="col-md-3">
                        {{ form_widget(form.lieuPromenade) }} </div>
                </div>
                <div class="form-group">
                    <label for="form_typePromenade" class="col-md-2 control_label">Type :</label>
                    <div class="col-md-3">
                        {{ form_widget(form.typePromenade) }} </div>
                </div>
                <div class="form-group">
                    <label for="form_descriptionPromenade" class="col-md-2 control_label">Description :</label>
                    <div class="col-md-3">
                        {{ form_widget(form.descriptionPromenade) }} </div>
                </div>
                <div class="form-group">
                    <label for="form_datedebutPromenade" class="col-md-2 control_label">Date debut :</label>
                    <div class="col-md-3">
                        {{ form_widget(form.datedebutPromenade) }} </div>
                </div>
                <div class="form-group">
                    <label for="form_datefinPromenade" class="col-md-2 control_label">Date fin :</label>
                    <div class="col-md-3">
                        {{ form_widget(form.datefinPromenade) }} </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Mettre Ã  jour <span class="glyphicon glyphicon-ok"></span></button>
                    </div>
                </div>
            </fieldset>

            {{ form_widget(form._token) }}
        </form>

    {% endblock %}




