{% endblock %}
{% block bar_laterale %}
    <div id="sidebar"><a href="{{ path('loginadmin') }}" class="visible-phone"><i class="icon icon-home"></i> Dashboard</a>
        <ul>
            <li><a href="{{ path('redirectPetSitter') }}"><i class="icon icon-home"></i> <span>Mes Promenades</span></a> </li>
            <li class="active"> <a href="{{ path('creerpromenade') }}"><i class="icon icon-signal"></i> <span>Ajout Promenade</span></a> </li>
